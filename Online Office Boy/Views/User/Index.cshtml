@model List<ApplicationService.ViewModels.UserWithRolesResponseVM>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Office Boys";
}

<div class="container">
    <h2>Office Boys</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Paid Period</th>
                <th>Office Location</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.PaidPeriod</td>
                    <td>@user.OfficeLocation</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td>
                        <a asp-controller="User" asp-action="UpdateRoles" asp-route-userId="@user.Id" class="btn btn-primary">Edit Roles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Return to Home</a>
</div>

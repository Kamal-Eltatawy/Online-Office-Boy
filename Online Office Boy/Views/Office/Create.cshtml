@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create";
}

@model OfficeCreateRequestVM

<div class="container">
    <h2>Create Office</h2>
    <form method="post" asp-action="Create" asp-controller="Office" >
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required maxlength="50" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input asp-for="IsKitchen" class="form-check-input" />
            <label class="form-check-label" asp-for="IsKitchen">Is Kitchen</label>
        </div>
        <div class="form-group">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" required maxlength="100" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
    <a asp-controller="Office" asp-area="" asp-action="Index" class="btn btn-secondary mt-3">Return to Home</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

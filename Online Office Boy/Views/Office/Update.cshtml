@model ApplicationService.ViewModels.EditOfficeRequestVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update";
}

<div class="container">
    <h1>Edit @Model.Name</h1>
    <div class="row">
        <div class="col-md-12">
            <form method="post" asp-action="Update" asp-controller="Office">
                <input asp-for="OfficeId" readonly hidden />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" required maxlength="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location"></label>
                    <input asp-for="Location" class="form-control" required maxlength="100" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="IsKitchen" type="checkbox" class="form-check-input" />
                    <label class="form-check-label" asp-for="IsKitchen">Is Kitchen</label>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
    <a asp-controller="Office" asp-action="Index" class="btn btn-secondary mt-3">Return to Home</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

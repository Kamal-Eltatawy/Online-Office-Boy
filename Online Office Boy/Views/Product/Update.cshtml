@model ApplicationService.ViewModels.ProductEditRequestVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update";
    SelectList categoryList = new SelectList(ViewBag.Categories, "Id", "Type");
}

<div class="container">
    <h1>Edit @Model.Name</h1>
    <div class="row">
        <div class="col-md-12">
            <form method="post" enctype="multipart/form-data" asp-action="Update" asp-controller="Product" >
                <input asp-for="ProductId" readonly hidden />
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" required maxlength="50" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" required maxlength="100"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" type="number" class="form-control" required min="0"  />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group w-50 h-50">
                    <label>Current Image:</label>
                    <img src="~/@Model.PictureUrl" class="img-thumbnail" alt="Image" />
                </div>
                <div class="form-group">
                    <label asp-for="File"></label>
                    <input asp-for="File" type="file" class="form-control-file" accept="image/*" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="IsAvailable" type="checkbox" class="form-check-input" />
                    <label class="form-check-label" asp-for="IsAvailable">Is Available</label>
                </div>
                <div class="form-group">
                    <label asp-for="ReadyTime"></label>
                    <input asp-for="ReadyTime" type="text" class="form-control" required pattern="[0-2][0-9]:[0-5][0-9]" placeholder="HH:MM" oninput="this.value = this.value.replace(/[^0-9:]/g, '')" />
                    <span asp-validation-for="ReadyTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" asp-items="categoryList" class="form-control">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
    <a asp-controller="Home" asp-area="" asp-action="Index" class="btn btn-secondary mt-3">Return to Home</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}

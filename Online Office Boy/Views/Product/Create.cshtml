@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create";
    SelectList categoryList = new SelectList(ViewBag.Categries, "Id", "Type");

}
@model ApplicationService.ViewModels.ProductRequestVM
@section Styles {
    <link href="~/css/TimeInput.css" rel="stylesheet" />
}
<div class="container">
    <h2>Create Product</h2>
    <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Product" >
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required maxlength="50" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" required maxlength="100"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" class="form-control" required min="0" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="File"></label>
            <input asp-for="File" type="file" class="form-control-file" required accept="image/*" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input asp-for="IsAvailable" type="checkbox" class="form-check-input" checked />
            <label class="form-check-label" asp-for="IsAvailable">Is Available</label>
        </div>
        <div class="form-group">
            <label asp-for="ReadyTime"></label>
            <input asp-for="ReadyTime" type="text" class="form-control" required pattern="[0-2][0-9]:[0-5][0-9]" placeholder="HH:MM" oninput="this.value = this.value.replace(/[^0-9:]/g, '')" />
            <span asp-validation-for="ReadyTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="categoryList" class="form-control">
            </select>
            <span asp-validation-for="CategoryId"></span>
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
    <a asp-controller="Product" asp-area="" asp-action="Index" class="btn btn-secondary mt-3">Return to Products</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
